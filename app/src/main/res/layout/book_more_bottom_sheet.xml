<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingTop="8dp"
  android:paddingBottom="8dp">

    <TextView
      android:id="@+id/title"
      style="@style/BottomSheetRow"
      android:text="@string/change_book_name"
      android:textAppearance="?textAppearanceBodyMedium"
      app:drawableStartCompat="@drawable/format_text" />

    <TextView
      android:id="@+id/internetCover"
      style="@style/BottomSheetRow"
      android:text="@string/download_book_cover"
      android:textAppearance="?textAppearanceBodyMedium"
      app:drawableStartCompat="@drawable/ic_download" />

    <TextView
      android:id="@+id/fileCover"
      style="@style/BottomSheetRow"
      android:text="@string/pick_book_cover"
      android:textAppearance="?textAppearanceBodyMedium"
      app:drawableStartCompat="@drawable/ic_image" />

    <TextView
      android:id="@+id/bookmark"
      style="@style/BottomSheetRow"
      android:text="@string/bookmark"
      android:textAppearance="?textAppearanceBodyMedium"
      app:drawableStartCompat="@drawable/bookmark" />

    <TextView
      android:id="@+id/markAsCurrent"
      style="@style/BottomSheetRow"
      android:text="@string/mark_as_current"
      android:textAppearance="?textAppearanceBodyMedium"
      app:drawableStartCompat="@drawable/current" />

    <TextView
      android:id="@+id/markAsNotStarted"
      style="@style/BottomSheetRow"
      android:text="@string/mark_as_not_started"
      android:textAppearance="?textAppearanceBodyMedium"
      app:drawableStartCompat="@drawable/not_started" />

    <TextView
      android:id="@+id/markAsComplete"
      style="@style/BottomSheetRow"
      android:text="@string/mark_as_complete"
      android:textAppearance="?textAppearanceBodyMedium"
      app:drawableStartCompat="@drawable/check" />

</LinearLayout>
